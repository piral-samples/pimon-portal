{
  "compilerOptions": {
    "declaration": true,
    "target": "esnext",
    "sourceMap": true,
    "skipLibCheck": true,
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "module": "esnext",
    "jsx": "react",
    "importHelpers": true,
    "strict": true,
    "noImplicitAny": false,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true
  },
  "include": ["packages/**/*"],
  "exclude": ["node_modules"]
}
